
@{
    Layout = null;
}
<html>
<head>
</head>
<body>

    @{Html.RenderPartial("Header", "Home"); }





    @using (Html.BeginForm("actualizarServicio", "Home", FormMethod.Post))
    {
        <div class="col-sm-4"></div>
        <div class="box box-success col-sm-5 text-center">
            <div class="box-header with-border">
                <h3 class="box-title linear-icon-text-align-center">Editar Servicio</h3>
            </div>



            <div class="form-group">
                @foreach (var a in ViewBag.service)
                {

                    <div class="w3-row w3-section ">

                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-suitcase"></i></div>
                        <div class="w3-rest">
                            <input class="form-control" type="text" placeholder="Ingresa el nombre del servicio" name="nombre" required value="@a.Servicio">
                        </div>
                    </div>

                    <div class="w3-row w3-section ">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-dollar"></i></div>
                        <div class="w3-rest">
                            <input class="form-control" type="text" placeholder="Ingresa el precio" name="precio" required value="@a.Precio">
                        </div>
                    </div>

                    <div class="w3-row w3-section ">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-tasks"></i></div>
                        <div class="w3-rest">
                            <textarea class="form-control" type="text" placeholder="Ingresa las propiedades" name="prop" required value="@a.Propiedades">@a.Propiedades</textarea>
                        </div>
                    </div>
                }
                @foreach (var b in ViewBag.service)
                {
                    <input type="hidden" id="id" name="id" value="@b.Id_servicio" />
                }
                <button id="btn2" class="btn btn-sm btn-success " type="submit">Actualizar <span class="glyphicon glyphicon-floppy-disk"></span></button>

            </div>
        </div>
        

    }

</body>

</html>

